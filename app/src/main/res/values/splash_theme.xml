<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_icon</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Mandiritask</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/background_icon</item>
        <item name="android:navigationBarColor">@color/background_icon</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowSplashScreenBrandingImage"></item>
    </style>
</resources>